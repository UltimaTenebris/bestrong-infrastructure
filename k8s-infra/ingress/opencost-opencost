apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: opencost
  namespace: opencost
  annotations:
    traefik.ingress.kubernetes.io/router.entrypoints: websecure
    traefik.ingress.kubernetes.io/router.middlewares: opencost-opencost-auth@kubernetescrd

spec:
  ingressClassName: traefik
  rules:
    - host: opencost.bestrong.pp.ua
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: opencost
                port:
                  name: http-ui
  tls:
    - hosts:
        - opencost.bestrong.pp.ua
      secretName: opencost-tls
